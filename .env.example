# Application Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Database Configuration (to be configured)
# DATABASE_URL=postgresql://user:password@localhost:5432/kendy_mcp
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# Authentication (to be configured)
# JWT_SECRET=your-secret-key-here
# JWT_EXPIRATION=24h
# REFRESH_TOKEN_EXPIRATION=7d

# MCP Configuration (to be configured)
# MCP_SERVER_URL=http://localhost:8080
# MCP_API_KEY=your-mcp-api-key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
# CORS_ORIGIN=http://localhost:3000
# CORS_CREDENTIALS=true

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# External Services (to be configured)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# Development
DEBUG=false
